<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_id"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="4dp"
    card_view:cardElevation="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp" >


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/crypto_card_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crypto_card_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Kripto coin"
            android:textSize="21dp"
            android:layout_toEndOf="@+id/crypto_card_image"
            android:layout_toRightOf="@+id/crypto_card_image"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crypto_card_description"
            android:textColor="@color/black"
            android:text="description coin"
            android:textSize="21dp"
            android:layout_toEndOf="@+id/crypto_card_image"
            android:layout_toRightOf="@+id/crypto_card_image"
            android:layout_below="@+id/crypto_card_title"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>